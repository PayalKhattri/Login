<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
   >

    <androidx.cardview.widget.CardView
        android:id="@+id/mainblogpost"
        android:layout_width="331.5dp"
        android:layout_height="333.4dp"
        android:layout_marginLeft="14.3dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="245.6dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bloguserimage"
            android:layout_width="37.3dp"
            android:layout_height="38dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ellipse" />

        <TextView
            android:id="@+id/blogusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65.4dp"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textColor="#0073B0" />

        <TextView
            android:id="@+id/blogdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65.4dp"
            android:layout_marginTop="36.7dp"
            android:text="TextView"
            android:textColor="#0073B0" />

        <ImageView
            android:id="@+id/blogimage"
            android:layout_width="330.7dp"
            android:layout_height="178.3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="76dp"
            android:src="@drawable/rectangle" />

        <TextView
            android:id="@+id/blogdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.1dp"
            android:layout_marginTop="269.3dp"
            android:text="Lorem Ipsum"
            android:textColor="#0073B0" />

        <ImageView
            android:id="@+id/bloglikebtn"
            android:layout_width="18dp"
            android:layout_height="16.5dp"
            android:layout_marginLeft="17.2dp"
            android:layout_marginTop="312.1dp"
            android:src="@drawable/favorite" />

        <TextView
            android:id="@+id/bloglikecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33.7dp"
            android:layout_marginTop="311dp"
            android:text="0 Likes"
            android:textColor="#0073B0" />

    </androidx.cardview.widget.CardView>


</LinearLayout>